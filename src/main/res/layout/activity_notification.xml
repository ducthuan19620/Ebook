<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification">

    <TextView
        android:id="@+id/textViewThongBao"
        android:layout_width="271dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="38dp"
        android:text="Thông Báo"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageViewChecklist"
        android:layout_width="53dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/textViewThongBao"
        app:srcCompat="@drawable/ic_action_check" />

    <ImageView
        android:id="@+id/imageViewNotice"
        android:layout_width="391dp"
        android:layout_height="359dp"
        android:layout_below="@+id/textViewThongBao"
        android:layout_marginStart="25dp"
        android:layout_marginTop="161dp"
        app:srcCompat="@drawable/ic_action_notice" />

</RelativeLayout>