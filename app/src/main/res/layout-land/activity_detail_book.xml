<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailBookActivity"
    android:padding="10dp"
    android:id="@+id/bookDetail_land"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/list_chapter"
        android:name="com.example.myapplication.Activity.ChapterFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:ignore="FragmentTagUsage" />

    <fragment
        android:id="@+id/book_content"
        android:name="com.example.myapplication.Activity.BookContentFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:ignore="FragmentTagUsage" />

</LinearLayout>